<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">

            <CheckBox android:id="@+id/checkbox_alface"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Alface"
                android:onClick="onCheckBoxClicked"/>

            <CheckBox android:id="@+id/checkbox_presunto"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Presunto"
                android:onClick="onCheckBoxClicked"/>

            <CheckBox android:id="@+id/checkbox_peitoperu"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Peito de Peru"
                android:onClick="onCheckBoxClicked"/>

            <CheckBox android:id="@+id/checkbox_azeitonas"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Azeitonas"
                android:onClick="onCheckBoxClicked"/>

            <CheckBox android:id="@+id/checkbox_tomate"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Tomate"
                android:onClick="onCheckBoxClicked"/>

            <CheckBox android:id="@+id/checkbox_queijo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Queijo"
                android:onClick="onCheckBoxClicked"/>

            <CheckBox android:id="@+id/checkbox_ovo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Ovo"
                android:onClick="onCheckBoxClicked"/>

            <CheckBox
                android:id="@+id/checkbox_milho"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Milho"
                android:onClick="onCheckBoxClicked"/>

            <CheckBox android:id="@+id/checkbox_peitofrango"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Peito de Frango"
                android:onClick="onCheckBoxClicked"/>

            <TextView
                android:id="@+id/tview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OlÃ¡, mundo!"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>